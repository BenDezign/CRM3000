<!-- BEGIN: Main Menu-->
<div class="main-menu menu-fixed menu-light menu-accordion menu-shadow" data-scroll-to-active="true">
    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item mr-auto"><a class="navbar-brand m-t-0"
                                            href="">
                    <div class="brand-logo m-t-8">
                        <img src="{{ asset('images/logo/favicon.png') }}" alt="{{ app_name }}" class="w-100">
                    </div>
                </a>

            </li>
            <li class="nav-item nav-toggle"><a class="nav-link modern-nav-toggle pr-0" data-toggle="collapse"><i
                            class="feather icon-x d-block d-xl-none font-medium-4 primary toggle-icon"></i><i
                            class="toggle-icon feather icon-disc font-medium-4 d-none d-xl-block collapse-toggle-icon primary"
                            data-ticon="icon-disc"></i></a></li>
        </ul>
    </div>
    <div class="shadow-bottom"></div>
    <div class="main-menu-content">

        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">

            {% set liste_page = ['mon_compte'] %}
            <li class="nav-item m-t-40">
                    <span class="menu-title" data-i18n="Moi">
                        <span><img class="round" src="{{ getAvatar(app.user.name,app.user.email) }}" alt="avatar" height="40" width="40"></span>
                        {{ app.user.name }}
                    </span>
            </li>

            <li class=" navigation-header"><span>Général</span></li>

            {% set liste_page = ['index'] %}

            <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %} ">
                <a href="{{ path('home') }}"><i class="feather icon-home"></i><span class="menu-title">Tableau de bord</span></a>
            </li>
            {% set liste_page = ['user_account'] %}
            <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %} ">
                <a href="{{ path('user_account') }}"><i class="fal fa-user-circle"></i><span class="menu-title">Mon compte</span></a>
            </li>
            {% set liste_page = ['app_logout'] %}
            <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %} ">
                <a href="{{ path('app_logout') }}"><i class="fal fa-sign-out"></i><span class="menu-title">Déconnexion</span></a>
            </li>


            <li class=" navigation-header"><span>Contacts</span></li>
            {% if is_granted('ROLE_ADMIN') %}
                {% set liste_page = ['user_index', 'user_new', 'user_edit'] %}

                <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %}">
                    <a href="{{ path('user_index') }}"><i class="fal fa-user"></i><span class="menu-title">Utilisateurs</span></a>
                </li>

                {% set liste_page = ['company_index', 'company_new', 'company_edit'] %}

                <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %}">
                    <a href="{{ path('company_index') }}"><i class="fal fa-building"></i><span class="menu-title">Sociétés</span></a>
                </li>
            {% endif %}
            {% set liste_page = ['customer_index','customer_new','customer_edit'] %}

            <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %}">
                <a href="{{ path('customer_index') }}"><i class="fal fa-users"></i><span class="menu-title">Clients</span></a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class=" navigation-header"><span>Comptabilité</span></li>

                {% set liste_page = ['facture_index','facture_new','facture_edit'] %}

                <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %}">
                    <a href="{{ path('facture_index') }}"><i class="fal fa-file-invoice-dollar"></i><span class="menu-title">Factures</span></a>
                </li>

                {% set liste_page = ['tva_index','tva_new','tva_edit'] %}

                <li class=" nav-item {% if app.request.get('_route') in liste_page %}active{% endif %}">
                    <a href="{{ path('tva_index') }}"><i class="fal fa-sliders-v"></i><span class="menu-title">Tva</span></a>
                </li>

            {% endif %}

        </ul>


    </div>
</div>
<!-- END: Main Menu-->


